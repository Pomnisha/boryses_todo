<h1>Listing tasklists</h1>

<table>
  <tr>
    <th>Task Name</th>
    <th>Task List Description</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasklists.each do |tasklist| %>
  <tr>
    <td><%= tasklist.tlname %></td>
    <td><%= tasklist.tldescription %></td>
    <td><%= tasklist.user_id %></td>
    <td><%= link_to 'Show', tasklist %></td>
    <td><%= link_to 'Edit', edit_tasklist_path(tasklist) %></td>
    <td><%= link_to 'Destroy', tasklist, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

