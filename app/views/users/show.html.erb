<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= "#{@user.fname} #{@user.lname}" %>
      </h1>
      </br>

      <%= if !params[:task].nil?
            render '_task'
          elsif !params[:tasklist].nil?
            render '_tasklist'
          elsif !params[:project].nil?
            render 'project_view'
          else
            render 'projects_list'
          end
      %>
      <!--%= render 'follow_form' if signed_in? %-->
      <!--% if @user.microposts.any? %-->
          <!--table class="microposts" summary="User microposts"-->
            <!--%= render @microposts %-->
          <!--/table-->
          <!--%= will_paginate @microposts %-->
      <!--% end %-->
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= "#{@user.fname} #{@user.lname}" %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
      <!--strong>Microposts</strong--> <!--%= @user.microposts.count %-->
      <!--%= render 'shared/stats' %-->
      <%= if !params[:tasklist].nil?
            link_to 'Create new task', new_task_path
          elsif !params[:project].nil?
            link_to 'Create new tasklist', new_tasklist_path(:project_id => @project.id)
          else
            link_to 'Create new project', new_project_path
          end
      %>
    </td>
  </tr>
</table>
