<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task Name</th>
    <th>Task Description</th>
    <th>Task Priority</th>
    <th>Task State</th>
    <th>Task List</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.tname %></td>
    <td><%= task.tdescription %></td>
    <td><%= task.tpriority %></td>
    <td><%= task.tstate %></td>
    <td><%= task.tasklist_id %></td>
    <td><%= task.user_id %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

